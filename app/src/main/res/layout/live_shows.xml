<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="175dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginVertical="3dp"
    android:layout_marginHorizontal="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/layout_capsule_bg">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_marginTop="1dp"
    android:background="@drawable/img_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_capsule_bg">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/live_arti_img"
            android:background="@drawable/img_capsule_bg"
            android:scaleType="fitXY"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_design"
        android:text="Live"
        android:backgroundTint="#FF0000"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:textSize="12sp"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="5"
        android:layout_alignParentEnd="true"
        android:layout_marginVertical="20dp">

        <RelativeLayout
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:background="@drawable/left_capsule"
            android:padding="5dp"
            android:layout_weight="1"
            android:backgroundTint="#ffffff">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/go_lives" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:background="@drawable/left_capsule"
            android:padding="5dp"
            android:layout_marginVertical="5dp"
            android:layout_weight="1"
            android:backgroundTint="#ffffff">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/go_videocall" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:background="@drawable/left_capsule"
            android:padding="5dp"
            android:layout_weight="1"
            android:backgroundTint="#ffffff">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/go_call"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="5dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:background="@drawable/left_capsule"
            android:padding="5dp"
            android:layout_marginVertical="5dp"
            android:layout_weight="1"
            android:backgroundTint="#ffffff">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/go_comment" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:background="@drawable/left_capsule"
            android:padding="5dp"
            android:layout_weight="1"
            android:backgroundTint="#ffffff">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/go_parsad"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="5dp" />
        </RelativeLayout>



    </LinearLayout>



</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Live Arti"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="15dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tips"
            android:textStyle="bold"
            android:layout_marginHorizontal="15dp"
            android:drawableStart="@drawable/dollar_bag"
            android:drawablePadding="5dp"
            android:layout_alignParentEnd="true"
            android:textColor="@color/textColor"/>

         </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp">

        <RelativeLayout
            android:id="@+id/rlllive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/capsule">
            <TextView
                android:id="@+id/tv_concert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                android:textAlignment="center"
                android:padding="2dp"
                android:textColor="@color/grey"
                android:textSize="14sp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/manrll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/rlllive"
            android:elevation="5dp"
            android:layout_marginStart="10dp">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:cardCornerRadius="500dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/textColor">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/man"/>
            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/man2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:layout_toRightOf="@id/manrll"
            android:layout_marginStart="-15dp">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:cardCornerRadius="500dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/textColor">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/man"/>
            </com.google.android.material.card.MaterialCardView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/man3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/man2"
            android:layout_marginStart="-15dp">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:cardCornerRadius="500dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/textColor">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/man"/>
            </com.google.android.material.card.MaterialCardView>


        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20K+ Going"
            android:textColor="@color/grey"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@id/man3"
            android:textSize="12sp"
            android:layout_centerVertical="true"/>


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="10dp"
        android:layout_gravity="end"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/locations"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grand Avenue,\n Indonesia"
            android:textSize="8dp"
            android:layout_marginStart="5dp"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/likes"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:gravity="end"
            android:weightSum="3">
            <ImageView
                android:id="@+id/livelearning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/user_watch"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/user_share"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tag"/>

        </LinearLayout>




    </LinearLayout>




</LinearLayout>