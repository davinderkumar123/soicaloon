<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/girl_filter_img"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.location.ShareWithFriendsFragment">

    <RelativeLayout

        android:id="@+id/rll1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginVertical="15dp">

        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/textColor"
          android:layout_alignParentStart="true"
            android:elevation="5dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/capsule">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/card1"
                android:layout_marginEnd="5dp"
                android:layout_marginVertical="5dp"
                android:layout_marginStart="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:text="Stella Malone"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1263"
                        android:textColor="@color/white"
                        android:drawablePadding="5dp"
                        android:drawableStart="@drawable/fireee"/>


                </LinearLayout>

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="5dp"
                app:cardCornerRadius="500dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/girl3"/>
            </androidx.cardview.widget.CardView>


            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:elevation="15dp"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/add_users"/>


        </RelativeLayout>

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/close_window"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:layout_centerVertical="true" />



        <RelativeLayout
            android:id="@+id/man1"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginEnd="25dp"
            android:layout_toLeftOf="@id/close">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:elevation="5dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/crowns"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="500dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/man"/>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>



        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/man2"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginEnd="4dp"
            android:layout_toLeftOf="@id/man1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:elevation="5dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/crowns"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="500dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/man"/>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/man3"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginEnd="4dp"
            android:layout_toLeftOf="@id/man2">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="7dp"
                android:elevation="5dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rotation="25"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/crowns"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:strokeColor="#FEC105"
                    app:strokeWidth="1.5dp"
                    app:cardCornerRadius="500dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/man"/>
                </com.google.android.material.card.MaterialCardView>
            </RelativeLayout>



        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>