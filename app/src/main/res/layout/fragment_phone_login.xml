<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.loginSection.PhoneLoginFragment">



    <TextView
        android:id="@+id/mainlogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Socilon"
        android:drawableStart="@drawable/app_icon"
        android:textColor="@color/black"
        android:layout_marginTop="60dp"
        android:layout_marginHorizontal="18sp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Log in with mobile
number"
      android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="50dp"
       android:layout_below="@+id/mainlogo"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <RelativeLayout
        android:id="@+id/phoneLAy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/rectangle_design"
        android:layout_below="@id/login"
        android:layout_marginTop="40dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="+91 | 7986754531"
            android:textColorHint="@color/black"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:textSize="16sp"
            android:drawableEnd="@drawable/cross"
            android:drawableStart="@drawable/flag"/>

    </RelativeLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/passwordSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/lock_logo"
        android:drawableEnd="@drawable/hide_logo"
        android:drawablePadding="10dp"
        android:hint="Password"
        android:background="@drawable/rectangle_design"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="15dp"
        android:layout_below="@id/phoneLAy"
        android:singleLine="true"
        android:padding="10dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/next2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:text="Next"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginHorizontal="20sp"
        android:layout_below="@id/passwordSignUp"
        android:background="@drawable/button_bg_login"
        android:backgroundTint="@color/textColor"/>


</RelativeLayout>